<form name="formSearch" action="/search" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="brand">Марка:</label>
      <input type="search" class="form-control" id="brand" name="brand" placeholder="например, Ford">
    </div>
    <div class="form-group col-md-6">
      <label for="model">Модель:</label>
      <input type="search" class="form-control" id="model" name="model" placeholder="например, Focus">
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="type">Тип кузова:</label>
      <select id='type' name="type" class="form-control">
        <option disabled selected>например, седан</option>
        <option value="Sedan">Седан</option>
        <option value="Passenger Van">Мини-фургон</option>
        <option value="SUV">Внедорожник</option>
        <option value="Wagon">Универсал</option>
        <option value="Minivan">Минивэн</option>
        <option value="Crew Cab Pickup">Пикап</option>
        <option value="Extended Cab Pickup">Грузовой фургон</option>
        <option value="Hatchback">Хэтчбек</option>
        <option value="Сrossover">Кроссовер</option>
        <option value="Coupe">Купе</option>
        <option value="Cabriolet">Кабриолет</option>
      </select>
    </div>

    <div class="form-group col-md-2">
      <label for="year">Год выпуска:</label>
      <select id='year' name="year" class="form-control">
        <option disabled selected>Выберите год</option>
        <option value="1990">1990</option>
        <option value="1991">1991</option>
        <option value="1992">1992</option>
        <option value="1993">1993</option>
        <option value="1994">1994</option>
        <option value="1995">1995</option>
        <option value="1996">1996</option>
        <option value="1997">1997</option>
        <option value="1998">1998</option>
        <option value="1999">1999</option>
        <option value="2000">2000</option>
        <option value="2001">2001</option>
        <option value="2002">2002</option>
        <option value="2003">2003</option>
        <option value="2004">2004</option>
        <option value="2005">2005</option>
        <option value="2006">2006</option>
        <option value="2007">2007</option>
        <option value="2008">2008</option>
        <option value="2009">2009</option>
        <option value="2010">2010</option>
        <option value="2011">2011</option>
        <option value="2012">2012</option>
        <option value="2013">2013</option>
        <option value="2014">2014</option>
        <option value="2015">2015</option>
        <option value="2016">2016</option>
        <option value="2017">2017</option>
        <option value="2018">2018</option>
        <option value="2019">2019</option>
        <option value="2020">2020</option>
      </select>
    </div>

    <div class="form-group col-md-2">
      <label for="gearbox">Коробка передач:</label>
      <select id='gearbox' name="gearbox" class="form-control">
        <option disabled selected>Выберите</option>
        <option value="automatic">АКПП</option>
        <option value="manual">МКПП</option>
      </select>
    </div>

    <div class="form-group col-md-2">
      <div class="form-check"><label for="seats">Кол-во мест:</label>
        <input class="form-control" type="number" name="seats" min="2" max="7"></div>
    </div>

    <div class="form-group col-md-3">
      <div class="form-check">
        <label for="ac">Система кондиционирования:</label>
        <input class="form-check-input form-control" type="checkbox" id="ac" name="ac">
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="form-check d-flex flex-row .align-items-center">
      <div class="color_circle">
        Цвет:
      </div>

      <div class="black color_circle">
        <label class="color_label" title="Черный"><input name="color" type="radio" value="black"></label>
      </div>
      <div class="white color_circle">
        <label class="color_label" title="Белый"><input name="color" type="radio" value="white"></label>
      </div>
      <div class="grey color_circle">
        <label class="color_label" title="Серый"><input name="color" type="radio" value="grey"></label>
      </div>
      <div class="green color_circle">
        <label class="color_label" title="Зеленый"><input name="color" type="radio" value="green"></label>
      </div>
      <div class="red color_circle">
        <label class="color_label" title="Красный"><input name="color" type="radio" value="red"></label>
      </div>
      <div class="blue color_circle">
        <label class="color_label" title="Синий"><input name="color" type="radio" value="blue"></label>
      </div>
      <div class="yellow color_circle">
        <label class="color_label" title="Желтый"><input name="color" type="radio" value="yellow"></label>
      </div>
      <div class="pink color_circle">
        <label class="color_label" title="Розовый"><input name="color" type="radio" value="pink"></label>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-primary btn-lg">Поиск</button>
</form>
